{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2019",
    "module": "CommonJS",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,  
    "strictFunctionTypes": true,
    "strictBindCallApply": true,  
    "strictPropertyInitialization": true, 
    "noImplicitThis": true,
    "alwaysStrict": true,  
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib/"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
